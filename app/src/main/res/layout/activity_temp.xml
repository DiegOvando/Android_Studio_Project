<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tempActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor de temperatura"
        android:textColor="@color/colorOff"
        android:textSize="50dp"
        android:textAlignment="center"
        android:paddingTop="20dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mide la temperatura de tu hogar"
        android:textColor="@color/colorOff"
        android:textSize="24dp"
        android:textAlignment="center"
        android:paddingTop="60dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperatura"
        android:textColor="@color/colorOff"
        android:textSize="44dp"
        android:textAlignment="center"
        android:paddingTop="90dp"
        android:paddingBottom="20dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X Grados Centigrados"
        android:textColor="@color/colorOff"
        android:textSize="22dp"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:paddingBottom="60dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:text="Regresar"
            android:textSize="35dp"
            android:background="@drawable/shapes"
            android:id="@+id/btnRegresar"></Button>



    </LinearLayout>

</LinearLayout>